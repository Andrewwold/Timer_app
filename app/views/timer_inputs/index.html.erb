<p id="notice"><%= notice %></p>

<h1>Timer Inputs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Set timer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timer_inputs.each do |timer_input| %>
      <tr>
        <td><%= timer_input.title %></td>
        <td><%= timer_input.set_timer %></td>
        <td><%= link_to 'Show', timer_input %></td>
        <td><%= link_to 'Edit', edit_timer_input_path(timer_input) %></td>
        <td><%= link_to 'Destroy', timer_input, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Timer Input', new_timer_input_path %>
